@model OnlineMovieTicketBookingApp.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/lib/bootstrap/bootstrap.css" rel="stylesheet" />
</head>
<body>


    <style>
        .heading {
            text-align: center;
            position: relative;
            top: 80px;
        }

        section {
            left: 435px;
            position: relative;
            top: 100px;
        }
        .button{
            left:155px;
            position: relative;
        }

    </style>


    @if(ViewBag.Message!= null)
            {
                <div class="jumotron text-center">
                    <div asp-validation-summary="All"></div>
                    <p class="alert alert-danger">@ViewBag.Message</p>
                </div>
            }

    <div class="heading">
        <h4>Admin Login</h4>
    </div>
    <section>
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                {
                    @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-control" })
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                    @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <br />
                    <input type="submit" class="btn btn-secondary button" value="Login" />
                    <br />
                    <br />
                    @*<p class="alert alert-dark">@ViewBag.Message</p>*@
                    <br />

                }
            </div>
        </div>
    </section>
</body>
</html>