@model OnlineMovieTicketBookingApp.Models.Show

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<style>
    .container {
        position: relative;
        left: 100px;
        top: 10px;
    }
    .message{
        color:red
    }
</style>

<div class="container">
    <h4>Add Show</h4>

    <hr />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Create", "Show", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"> Show Date & Time</label>
                    <input asp-for="Date_And_Time" class="form-control" />
                    @Html.ValidationMessageFor(m => m.Date_And_Time, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="control-label">Movie Id</label>
                    @Html.EditorFor(m => m.Movie_Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Movie_Id, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="control-label">Hall Id</label>
                    @Html.EditorFor(m => m.Hall_Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Hall_Id, "", new { @class = "text-danger" })
                    <br />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-dark" /> |
                    <a asp-controller="Show" asp-action="Index">Back to List</a>
                    <br /><br />
                </div>
            }
        </div>
    </div>
    <p class="message">@ViewBag.Message</p>
    <br />

</div>